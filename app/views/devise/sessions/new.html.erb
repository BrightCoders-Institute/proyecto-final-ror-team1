<div class="h-screen flex justify-center items-center">
  <div class="bg-white p-8 shadow-md rounded-md w-96">
    <h2 class="text-2xl font-semibold mb-4 text-gray-900">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: 'font-semibold text-gray-900' %>
        <%= f.email_field :email, required: true, autocomplete: "email", class: 'w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'font-semibold text-gray-900' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:outline-none focus:ring focus:ring-blue-200' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me, class: 'text-gray-700 font-semibold' %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit 'Log in', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 font-semibold' %>
      </div>
    <% end %>

    <div class="text-center">
      <a href="<%= new_user_registration_path %>" class="text-blue-500 hover:underline font-semibold">Sign up</a>
      <span class="text-gray-500 mx-2">|</span>
      <a href="<%= new_user_password_path %>" class="text-blue-500 hover:underline font-semibold">Forgot your password?</a>
    </div>
  </div>
</div>
