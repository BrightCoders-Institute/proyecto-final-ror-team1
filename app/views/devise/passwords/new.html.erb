  <div class="text-center mt-4">
    <%= image_tag("favpng_location-apple-icon-image-format.png", alt: "DescripciÃ³n de la imagen", class: "w-16 h-16 mx-auto mb-2") %>
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">Shipment Tracker</h2>
