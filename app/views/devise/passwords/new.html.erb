<div class="h-screen flex justify-center items-center">
  <div class="bg-white p-8 shadow-md rounded-md w-96">
    <h2 class="text-2xl font-semibold mb-4 text-gray-900">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "font-semibold text-gray-900" %>
        <%= f.email_field :email, required: true, autocomplete: "email", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Send me reset password instructions", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 font-semibold" %>
      </div>
    <% end %>

    <div class="text-center">
      <%=link_to 'Sign up', new_user_registration_path, class: 'text-blue-500 hover:underline font-semibold'%>
      <span class="text-gray-500 mx-2">|</span>
      <%=link_to 'Log in', new_user_session_path, class: 'text-blue-500 hover:underline font-semibold'%>
    </div>
  </div>
</div>
