<div class="bg-white p-8 shadow-md rounded-md w-96">
  <h2 class="text-2xl font-semibold mb-4 text-gray-900">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "font-semibold text-gray-900" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "font-semibold text-gray-900" %> <i class="text-sm text-gray-600">(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "font-semibold text-gray-900" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: "font-semibold text-gray-900" %> <i class="text-sm text-gray-600">(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Update", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 font-semibold" %>
    </div>
  <% end %>

  <div class="mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 font-semibold" %></div>

  <%= link_to "Back", :back, class: "text-blue-500 hover:underline font-semibold" %>
</div>

