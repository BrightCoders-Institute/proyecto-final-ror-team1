<div class="flex justify-center align-center">
  <div class="bg-white p-8 shadow-md rounded-md w-96">
    <h2 class="text-2xl font-semibold mb-4 text-gray-900">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "font-semibold text-gray-900" %>
        <%= f.email_field :email, required: true, autocomplete: "email", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "font-semibold text-gray-900" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "font-semibold text-gray-900" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border rounded border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Sign up", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 font-semibold" %>
      </div>
    <% end %>
    <div class="text-center">
      <a href="<%= new_user_session_path %>" class="text-blue-500 hover:underline font-semibold">Log in</a>
    </div>
  </div>
</div>
