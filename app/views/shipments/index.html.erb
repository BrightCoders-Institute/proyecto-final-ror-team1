<div class="w-full h-16 border-b-2 border-black border-solid flex items-center drop-shadow-lg">
  <h1 class="ml-6">Shipments</h1>
</div>

<div class="mt-4 mx-6 flex items-center justify-between">
  <%= form_tag shipments_index_path, class: 'flex items-center', method: :get do %>
    <%= label_tag :status, "Status", class: 'text-sky-700 font-medium' %>
    <%= select_tag :status, options_for_select(shipment_statuses, params[:status]), class: 'w-40 h-9 pt-2 ml-2 text-sm font-medium text-gray-500 drop-shadow-lg border-0 rounded-md' %>

    <%= label_tag :carrier_name, "Carrier", class: 'ml-4 text-sky-700 font-medium' %>
    <%= select_tag :carrier_name, options_for_select(carrier_names, params[:carrier_name]), class: 'w-40 h-9 pt-2 ml-2 text-sm font-medium text-gray-500 drop-shadow-lg border-0 rounded-md' %>

    <%= submit_tag "Filter", class: 'ml-6 border-2 border-sky-700 border-solid w-20 h-9 text-sky-700 rounded-md font-medium' %>
  <% end %>

  <div class="w-60 flex justify-between text-center">
    <%= link_to 'Add', :new_shipment, class: 'border-2 border-sky-700 border-solid w-24 h-11 text-sky-700 rounded-md font-medium pt-2'  %>
    <%= link_to 'Export', :new_shipment, class: 'border-2 border-sky-700 border-solid w-24 h-11 text-sky-700 rounded-md font-medium pt-2'  %>
  </div>
</div>

<table class="mt-4 mx-6">
  <thead class="bg-slate-100 h-11">
    <tr class="text-left pl-2">
      <th class="pl-2 w-80">Created</th>
      <th class="w-36">Receiver</th>
      <th class="w-36">Carrier</th>
      <th class="w-72">Tracking number</th>
      <th class="w-36">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td class="pt-4 pl-2"><%= DateTime.parse(shipment.created_at.to_s).strftime('%d %b %Y') %></td>
        <td>Receiver</td>
        <td><%= shipment.carrier.name %></td>
        <td><%= shipment.tracking_number %></td>
        <td><%= shipment.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
